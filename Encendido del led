; PIC18F4550 Configuration Bit Settings

; Assembly source line config statements
     
#include "p18f4550.inc"
CONFIG  FOSC = INTOSC_HS      ; Oscillator Selection bits (Internal oscillator, HS oscillator used by USB (INTHS))
CONFIG  WDT = OFF             ; Watchdog Timer Enable bit (WDT disabled (control is placed on the SWDTEN bit))
CONFIG  LVP = OFF    
    
ORG 0x00        ; Direcci√≥n de inicio del programa
goto Inicio     ; Se salta a la etiqueta Inicio

Inicio:
    CLRF PORTB      ; Limpiar el puerto B
    MOVLW 0x00
    movwf TRISB     ;  Se configura PORTB como salida

    bsf PORTB, 0    ; Enciende el LED en RB0 (pone el bit en 1)

Loop:
    goto Loop       ; Mantenerse en un bucle para que el LED siga encendido

    END             ; Fin del programa
